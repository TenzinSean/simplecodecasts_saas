<div class="row">
    <div class="col-md-3 text-center">
       <span class="new"> <%= image_tag @user.profile.avatar.url %></span>
    </div>
    <div class="col-md-6 text-center">
    <h1><%= @user.profile.first_name %> <%= @user.profile.laste_name %></h1>
    <h3><span class="job-title-icon"><%= job_title_icon %></span><%= @user.profile.job_title %><br/></h3>
    <div class="well profile-description">
    <h3>Description</h3>
    <%= @user.profile.description %><br/>
    </div>
    <% if true #current_user.plan_id == 2 %>
    <div class="well contact-info">
        <h3>Contact info</h3>
        <%= @user.profile.phone_number %><br/>
        <%= @user.profile.contact_email %><br/>
    </div>
    <% end %>
    </div>
</div>


